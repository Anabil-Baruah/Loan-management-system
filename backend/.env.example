# LMS Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/lms_db
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/lms_db
MONGODB_URI=mongodb://localhost:27017/lms_db

# API Configuration
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=dev
